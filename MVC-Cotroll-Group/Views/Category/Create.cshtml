@model MVC_Cotroll_Group.Models.Category
@{
    ViewData["Title"] = "Додати категорію";
}

<div class="flex justify-center items-start mt-16">
    <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md">
        <h2 class="text-2xl font-extrabold text-gray-800 mb-6">Додати категорію</h2>

        <form asp-action="Create" method="post" class="space-y-5">
            <div>
                <label asp-for="Name" class="block text-gray-700 font-medium mb-1">Назва категорії</label>
                <input asp-for="Name" class="w-full border border-gray-300 rounded-xl px-4 py-2 focus:ring-2 focus:ring-blue-400 outline-none transition" />
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end gap-3 pt-4">
                <a asp-action="Index"
                   class="px-4 py-2 rounded-xl text-black hover:text-gray-900 border border-gray-300 transition text-decoration-none">Скасувати</a>
                <button type="submit"
                        class="bg-blue-600 text-white font-medium px-4 py-2 rounded-xl hover:bg-blue-700 transition">
                    Зберегти
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
